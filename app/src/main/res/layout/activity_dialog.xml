<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_dialog"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/background_dialog">

    <TextView
        android:text="@string/text_result_game"
        android:textColor="@color/black"
        android:textSize="18sp"
        android:fontFamily="@font/font_comic"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/winner"
        android:layout_width="wrap_content"
        android:layout_height="73dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/font_comic"
        android:lineSpacingExtra="-8dp"
        android:text="@string/text_winner"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="26sp" />

    <Button
        android:id="@+id/play_again"
        android:text="@string/return_play"
        android:textColor="@color/black"
        android:textSize="18sp"
        android:textStyle="normal"
        android:layout_gravity="center_horizontal"
        android:textAllCaps="false"
        app:backgroundTint="@color/green"
        android:background="@drawable/butt_green"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_width="match_parent"
        android:layout_height="45dp"/>

    <Button
        android:id="@+id/back_menu"
        android:text="@string/back_menu"
        android:textColor="@color/black"
        android:textSize="18sp"
        android:textStyle="normal"
        android:layout_gravity="center_horizontal"
        android:textAllCaps="false"
        android:background="@drawable/butt_orange"
        app:backgroundTint="@color/orange"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="35dp"
        android:layout_width="match_parent"
        android:layout_height="45dp"/>

</LinearLayout>